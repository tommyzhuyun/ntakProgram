*****< 各SPFILEのOPTION >*****
.lib hspice_1
.option INGOLD=2 NUMDGT=5 MEASDGT=4 CONVERGE=1 DCON=1 POST=0 UNWRAP STRICT_CHECK=1 ACOUT=1 SYMB=1 CPTIME=60 NOMOD STATFL=1 MEASOUT=0
.SAVE LEVEL = NONE
.endl

.lib hspice_2
.option INGOLD=2 NUMDGT=5 MEASDGT=4 CONVERGE=1 DCON=1 POST=1 UNWRAP STRICT_CHECK=1 ACOUT=1 SYMB=1 NOMOD CPTIME=60 STATFL=0 MEASOUT=0
.SAVE LEVEL = NONE
.endl

****< 最適化用のOPTION >*****
.lib hspice_Opt
.option INGOLD=2 NUMDGT=5 MEASDGT=5 CONVERGE=1 DCON=1 POST=0 UNWRAP STRICT_CHECK=1 ACOUT=1 SYMB=1 NOMOD CPTIME=300 STATFL=1 MEASOUT=0
.SAVE LEVEL = NONE
.endl

****< ngspice 用オプション >*****
.lib ngspice
.option gmin=1e-12 itl1=300 itl2=300 abstol=1uA vntol=1mV reltol=0.01 warn=1
.option INGOLD=2 NUMDGT=5 MEASDGT=4 CONVERGE=1 DCON=1 POST=1 UNWRAP STRICT_CHECK=1 ACOUT=1 SYMB=1 NOMOD CPTIME=10 STATFL=0 MEASOUT=0
.endl
